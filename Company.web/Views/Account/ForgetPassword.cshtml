@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ForgetPassword</h1>

<form asp-action="ForgetPassword" method="post">
    <div asp-validation-summary="All"></div>

    <input type="email" class="form-control" asp-for="Email" placeholder="Email">
    <span asp-validation-for="Email"></span>

    <br />
    <div class="container-login100-form-btn m-t-32">
        <button type="submit" value="ForgetPassword" class="login100-form-btn">
            ForgetPassword
        </button>
    </div>
</form>

