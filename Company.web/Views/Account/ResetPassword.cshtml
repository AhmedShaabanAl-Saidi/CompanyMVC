@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ResetPassword</h1>

<form asp-action="ResetPassword" method="post">
    <div asp-validation-summary="All"></div>

    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />

    <input type="password" class="form-control" asp-for="Password" placeholder="Password">
    <span asp-validation-for="Password"></span>
    <br />
    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="ConfirmPassword">
    <span asp-validation-for="ConfirmPassword"></span>
    <br />
    <div class="container-login100-form-btn m-t-32">
        <button type="submit" value="ResetPassword" class="login100-form-btn">
            Reset Password
        </button>
    </div>
</form>

