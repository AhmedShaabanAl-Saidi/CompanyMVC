@model Department
@{
	ViewData["Title"] = "Details";
}

<h1>Department Details</h1>
<br />
<br />

<form asp-action="Update" asp-route-id="@Model.Id">

	<div class="form-group">
		<label asp-for="Code" class="control-label"></label>
		<input asp-for="Code" type="text" class="form-control" readonly />
	</div>
	<div class="form-group">
		<label asp-for="Name" class="control-label"></label>
		<input asp-for="Name" type="text" class="form-control" readonly />
	</div>
	<div class="form-group">
		<label asp-for="CreatedAt" class="control-label"></label>
		<input asp-for="CreatedAt" type="text" class="form-control" readonly />
	</div>

	<div class="mt-4">
		<input type="submit" value="Update" class="btn btn-primary" />
		<a asp-action="Index" class="btn btn-secondary">Back to List</a>
	</div>
	
</form>
